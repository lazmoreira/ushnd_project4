  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "${workspaceRoot}/application.py",
        "FLASK_DEBUG": "0",
        "SERVER_HOST": "localhost",
        "SERVER_PORT": "5555"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "-h",
        "localhost",
        "-p",
        "5555",
        "--cert",
        "adhoc"
      ],
      "jinja": true,
      "justMyCode": true
    }
  ]
}
